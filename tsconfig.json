{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "declaration": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "noEmit": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "rootDir": "src"
  },
  "include": [
    "src/**/*.ts",
    "src/index.ts"
  ]
}
